@using SeyehatRehber.Models.Entity
@model List<Blog>
@{
    ViewBag.Title = "BlogListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    
</style>
<br />
<link href="~/web3/styles/icon-font.min.css" rel="stylesheet" />
<div class="card-box container">

    <div class="pb-20">
        <table style="color:#212529 !important" class="data-table table table-bordered stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">ID</th>
                    <th>Başlık</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <th>@x.ID</th>
                        <td>@x.BASLIK</td>
                        <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Admin/BlogDetay/@x.ID" class="btn btn-warning">Güncelle</a></td>
                        <td><a href="/Blog/BlogDetay/@x.ID" class="btn btn-default">Detaylar</a></td>
                    </tr>
                }

</table>
    </div>
</div>